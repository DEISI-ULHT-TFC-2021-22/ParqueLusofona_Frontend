@model IndexModel

@{
    ViewData["Title"] = "Home page";
}

<link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" /> 

<br/> 
<div class="float-container">

  <div class="float-child">
    <form  method="post" asp-page-handler="SearchUser">
        <input id = "accept2" asp-for="SearchUserMatricula" placeholder = "Inserir Matrícula" type="text"  asp-for="searchUser"></input>
        <button type="submit"  class="btn btn-black_accept">Procurar Utilizador</button>
        <div class="form-outline mb-4">
      <label>@Model.username</label>
        </div>
     </form>
  </div>
  
  <div class="float-child">
        <form method="post"  asp-page-handler="CleanUser">
        <button type="submit"  class="btn btn-black_accept">X</button>
         </form>
  </div>
  
</div>
